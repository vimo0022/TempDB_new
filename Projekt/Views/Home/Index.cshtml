@model Projekt.Models.TemperatureDetaljer

@{
    Layout = null;
    ViewData["Title"] = "Temperature";
}

<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Temperaturvy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PROJEKT.styles.css" asp-append-version="true" />
    <style>
        body {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
        }

        header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
        }

        .custom-navbar {
            background-color: transparent;
            border: none;
        }

        .navbar-nav .nav-link {
            color: #000 !important;
        }

        .temperature-view {
            text-align: center;
            padding: 80px 20px;
            margin-top: 60px;
            border: 1px solid #f2f2f2;
            border-radius: 12px;
            background-color: #f2f2f2;
        }

        .temperature-circle {
            width: 360px;
            height: 360px;
            background-color: #000;
            color: #fff;
            border-radius: 50%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
        }

        .temperature-text {
            font-size: 4em; 
        }

        .timestamp {
            color: #fff;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm custom-navbar border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-dark" asp-area="" asp-controller="Home" asp-action="Index">PROJEKT</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Temperature" asp-action="GetTemps">Show Latest Data</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="temperature-view">
        <div class="temperature-circle">
            <div class="temperature-text">@Model.Temperature°C</div>
            <div class="timestamp">@Model.MeasurementTime</div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>